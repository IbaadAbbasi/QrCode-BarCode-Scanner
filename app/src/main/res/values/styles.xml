<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/myriadpro</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/myriadpro</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">

        <item name="android:fontFamily">@font/myriadpro</item>
        <item name="android:textColor">@drawable/nav_selector</item>
    </style>


</resources>
